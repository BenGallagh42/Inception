# MariaDB configuration
# This file configures the MariaDB server to work in a Docker container

[mysqld]
# Listen on all network interfaces (not just localhost)
# This allows WordPress container to connect
bind-address = 0.0.0.0

# Port to listen on (default MySQL/MariaDB port)
port = 3306

# Data directory (where databases are stored)
datadir = /var/lib/mysql

# Socket file location
socket = /var/run/mysqld/mysqld.sock

# Character set and collation
# UTF-8 support for international characters
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Skip name resolution (faster, more secure)
# Use IP addresses instead of hostnames
skip-name-resolve

# Logging
# Log errors to standard error (Docker will capture this)
log_error = /dev/stderr

# General log (optional, useful for debugging)
# Uncomment to enable query logging
# general_log = 1
# general_log_file = /dev/stdout
